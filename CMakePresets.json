{
    "version": 3,
    "configurePresets": [
        {
            "name": "Win32-Base",
            "description": "Target Windows with gcc and Ninja Generator.",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc.exe",
                "CMAKE_CXX_COMPILER": "g++.exe",
                "CMAKE_CXX_STANDARD": "20"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "Win32-Debug",
            "displayName": "Windows Debug",
            "description": "Target Windows (64-bit) with gcc and Ninja Generator. (Debug)",
            "inherits": "Win32-Base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "Win32-RelWithDebInfo",
            "displayName": "Windows RelWithDebInfo",
            "description": "Target Windows (64-bit) with gcc and Ninja Generator. (RelWithDebInfo)",
            "inherits": "Win32-Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "Win32-Release",
            "displayName": "Windows Release",
            "description": "Target Windows (64-bit) with gcc and Ninja Generator. (Release)",
            "inherits": "Win32-Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}